---
import Layout from '../layouts/Layout.astro';
import ImageGallery from '../components/ImageGallery.astro';

// Define the snowboarding images
const images = [
	{
		url: '/snowboardTracking/Slopes 20260114 Mount St. Louis Moonstone Runs and Lifts.png',
		caption: 'Mount St. Louis Moonstone - Jan 14, 2026',
		date: 'Jan 14, 2026',
	},
];
---

<Layout title="Snowboarding" description="Snowboarding photos and videos">
	<main class="bg-[#2E3440] min-h-screen py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			{/* Header */}
			<div class="mb-12">
				<h1 class="text-4xl md:text-5xl font-bold text-[#E5E9F0] mb-4">Snowboarding</h1>
				<p class="text-lg text-[#D8DEE9] max-w-2xl">
					My snowboarding tracking and photos.
				</p>
			</div>

			{/* Gallery */}
			<ImageGallery images={images} />
		</div>
	</main>
</Layout>
