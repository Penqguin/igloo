---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { projects } from '../navigation';
---
<Layout title="Projects" description="View my portfolio projects">
	<main class="bg-[#2E3440] min-h-screen py-16">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			{/* Header */}
			<div class="mb-12">
				<h1 class="text-4xl md:text-5xl font-bold text-[#E5E9F0] mb-4">Projects</h1>
				<p class="text-lg text-[#D8DEE9] max-w-2xl">
					A collection of projects I've worked on, showcasing my work in systems development, web technologies, and competitive programming.
				</p>
			</div>

			{/* Projects Grid */}
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{projects.map((project) => (
					<a
						href={project.github}
						target="_blank"
						rel="noopener noreferrer"
						class="group bg-[#3B4252] border border-[#434C5E] rounded-lg p-6 hover:border-[#88C0D0] transition-all duration-200 hover:shadow-lg hover:shadow-[#88C0D0]/20 flex flex-col"
					>
						{/* Featured Badge */}
						{project.featured && (
							<div class="mb-3 inline-flex">
								<span class="px-3 py-1 bg-[#88C0D0] text-[#2E3440] text-xs font-bold rounded-full">
									Featured
								</span>
							</div>
						)}

						{/* Header with icon */}
						<div class="flex items-start justify-between mb-4 flex-1">
							<div class="flex-1">
								<h3 class="text-xl font-bold text-[#E5E9F0] group-hover:text-[#88C0D0] transition-colors">
									{project.title}
								</h3>
							</div>
							<Icon name="mdi:github" class="w-6 h-6 text-[#D8DEE9] flex-shrink-0 ml-3" />
						</div>

						{/* Description */}
						<p class="text-[#D8DEE9] text-sm leading-relaxed mb-4 flex-1">
							{project.description}
						</p>

						{/* Tags */}
						<div class="flex flex-wrap gap-2">
							{project.tags.map((tag) => (
								<span class="px-2 py-1 bg-[#434C5E] text-[#88C0D0] text-xs rounded font-medium">
									{tag}
								</span>
							))}
						</div>
					</a>
				))}
			</div>
		</div>
	</main>
</Layout>