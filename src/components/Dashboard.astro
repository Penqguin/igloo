---
import MapWidget from './widgets/MapWidget.astro';
import CommitsWidget from './widgets/CommitsWidget.astro';
import TicTacToeWidget from './widgets/TicTacToeWidget.astro';
import ContactWidget from './widgets/ContactWidget.astro';
---

<section class="bg-[#2E3440] py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-[#E5E9F0] mb-12">Dashboard / Highlights</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <MapWidget />
      <CommitsWidget />
      <TicTacToeWidget />
      <ContactWidget />
    </div>
  </div>
</section>
