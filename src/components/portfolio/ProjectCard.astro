---
// Portfolio project card component
// This component accepts data via props (title, description, tags, url)
// No placeholder data should be hardcoded
interface Props {
  title: string;
  description: string;
  image?: string;
  tags?: string[];
  link?: string;
}

const { title, description, image, tags = [], link } = Astro.props;
---

<article class="bg-[#3B4252] border border-[#434C5E] rounded-lg overflow-hidden hover:border-[#88C0D0] transition-all duration-200 group">
  {image && (
    <img 
      src={image} 
      alt={title} 
      class="w-full h-48 object-cover group-hover:opacity-90 transition-opacity duration-200" 
    />
  )}
  <div class="p-6">
    <h3 class="text-xl font-bold text-[#E5E9F0] mb-2 group-hover:text-[#88C0D0] transition-colors">
      {title}
    </h3>
    <p class="text-[#D8DEE9] mb-4 leading-relaxed text-sm">
      {description}
    </p>

    {/* Tags Section */}
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map((tag) => (
          <span class="text-xs bg-[#434C5E] text-[#88C0D0] px-3 py-1 rounded-full border border-[#88C0D0] border-opacity-30 hover:border-opacity-100 transition-colors">
            {tag}
          </span>
        ))}
      </div>
    )}

    {/* Link Button */}
    {link && (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block mt-2 px-4 py-2 bg-[#88C0D0] text-[#2E3440] rounded-lg font-medium hover:bg-[#81A1C1] transition-colors duration-200 text-sm"
      >
        View Project â†’
      </a>
    )}
  </div>
</article>
