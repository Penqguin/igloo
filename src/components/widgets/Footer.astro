---
import { footerData } from '../../navigation';
import "../../styles/global.css";
import { Icon } from 'astro-icon/components';

const { contentLinks } = footerData;
---

<footer class="bg-gray-50 dark:bg-slate-800 border-t border-gray-200 dark:border-gray-700 mt-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex justify-between">
      <div>
        <div class="flex gap-4">
          {contentLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
            >
              <Icon name={link.logo} class="w-6 h-6" />
            </a>
          ))}
        </div>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700 text-center text-gray-600 dark:text-gray-400 text-sm">
      <p>&copy; 2025 Michael Maddison.</p>
    </div>
  </div>
</footer>
