---
import { footerData } from '../../navigation';
import "../../styles/global.css";
import { Icon } from 'astro-icon/components';

const { contentLinks } = footerData;
---

<footer class="bg-[#3B4252] border-t border-[#434C5E] mt-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-8">
      <!-- Social Links -->
      <div class="flex gap-6">
        {contentLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[#D8DEE9] hover:text-[#88C0D0] transition-colors duration-200"
            aria-label={link.text}
          >
            <Icon name={link.logo} class="w-5 h-5" />
          </a>
        ))}
      </div>

      <!-- Status Indicator -->
      <div class="flex items-center gap-2 text-[#D8DEE9] text-sm">
        <span class="w-2 h-2 rounded-full bg-[#A3BE8C]"></span>
        <span>All Services Nominal</span>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-[#434C5E] text-center text-[#D8DEE9] text-sm opacity-75">
      <p>&copy; 2025 Michael Maddison</p>
    </div>
  </div>
</footer>
