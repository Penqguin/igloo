---
// Hero component accepting data via props
// Structure: Two-column grid (responsive: stack on mobile)
interface Props {
  headline: string;
  subheadline: string;
  bio: string;
  profileImage?: string;
  socialLinks?: Array<{ label: string; url: string; icon?: string }>;
}

const {
  headline,
  subheadline,
  bio,
  profileImage,
  socialLinks = [],
} = Astro.props;
---

<section class="bg-[#2E3440] text-[#D8DEE9] py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Left Column: Text Content -->
      <div class="order-2 md:order-1">
        {/* Headline */}
        <h1 class="text-4xl md:text-5xl font-bold text-[#E5E9F0] mb-2 leading-tight">
          {headline}
        </h1>

        {/* Sub-headline */}
        <h2 class="text-xl md:text-2xl text-[#88C0D0] mb-6 font-medium">
          {subheadline}
        </h2>

        {/* Bio Paragraph */}
        <p class="text-base md:text-lg leading-relaxed text-[#D8DEE9] mb-8 max-w-md">
          {bio}
        </p>

        {/* Social Links - Icons */}
        {socialLinks.length > 0 && (
          <div class="flex gap-6">
            {socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[#D8DEE9] hover:text-[#88C0D0] transition-colors duration-200"
                aria-label={link.label}
              >
                {link.label === 'GitHub' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {link.label === 'LinkedIn' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.475-2.236-1.986-2.236-1.081 0-1.722.722-2.004 1.418-.103.25-.129.599-.129.949v5.438h-3.554s.047-8.81 0-9.728h3.554v1.375c.425-.654 1.187-1.586 2.882-1.586 2.105 0 3.681 1.375 3.681 4.335v5.604zM5.337 9.341c-1.144 0-1.915-.759-1.915-1.71 0-.954.769-1.71 1.958-1.71 1.188 0 1.914.756 1.939 1.71 0 .951-.751 1.71-1.982 1.71zm1.581 11.111H3.615V9.724h3.303v10.728zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Right Column: Profile Picture -->
      {profileImage && (
        <div class="order-1 md:order-2 flex justify-center md:justify-end">
          <div class="relative">
            <div class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-100 lg:h-100 rounded-lg overflow-hidden border-4 border-[#88C0D0] shadow-lg">
              <img
                src={profileImage}
                alt="Profile"
                class="w-full h-full object-cover"
              />
            </div>
            {/* Decorative accent */}
            <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-[#3B4252] rounded-lg opacity-50"></div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
